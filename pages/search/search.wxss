/* pages/search/search.wxss */

.search {
  height: 100%;
 margin: 10rpx;
}

.item_header {
  width: 100%;
  border: 1px solid silver;
  border-radius: 5px;
  display: flex;
  height: 60rpx;
}

input {
  margin-left: 3px;
  padding-top: 2px;
  width: 98%
}

.avatar-wrapper {
  background: beige;
  padding: 25px 0;
}

.avatar-wrapper .avatar {
  margin: 0 auto;
  text-align: center;
}

.avatar-wrapper .avatar image {
  width: 100px;
  height: 100px;
}

.avatar-wrapper .text {
  text-align: center;
}

.weui-cells::after{
  content: none;
  border-bottom: none;
}

.weui-cells::before{
  border-top: none;
}

.weui-cell__bd{
  padding-left: 15rpx;
  font-size: 30rpx;
}

.weui-cell {
  padding: 5px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.img{
  padding-right: 13rpx;
  position: relative;
  z-index: 10;
}

 .weui-cell__ft image {
  vertical-align: middle;
  width: 36rpx;
  height:36rpx;
} 
